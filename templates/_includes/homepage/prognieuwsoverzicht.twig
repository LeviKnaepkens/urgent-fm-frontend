    {% for nieuws in nieuws %}
        <article class="d-flex align-items-start mt-4">
            {% set relatedPrograms = nieuws.programma.all() %}

            {# Ophalen gegevens in programma-entriesveld #}
            {% for program in relatedPrograms %}     
            

                {# Logo van  programma #}
                <a href="{{ program.url }}" class="d-inline-block">
                    <div class="programma-logo d-inline-block">

                    {# {% set ft = {
                        mode:'crop',
                        width: 100,
                        height: 100,
                        quality: 90
                    } %} #}

                    {% set logo = program.programmaLogo.one() %}
                    <img src="{{ logo.url }}"  alt="{{ logo.title }}"/>

                    </div>
                </a>

                <div class="prgInfo  d-inline-block ms-4 align-self-start">
                    {# Voorlopig een link naar programmapagina, ipv naar listing gelinkt aan categorie #}
                    {# <a class="prgNwsCategory" href="{{ program.url }}">{{ program.title }}</a> #}
                    <a class="nwsItemTitle" href="{{ program.url }}"><h3>{{ nieuws.title }}</h3></a>
                    <small class="align-self-baseline">{{ nieuws.postDate|date('D d/m/Y') }}</small>
                </div>
        </article><!-- einde nieuwsItem -->
            {% endfor %}

    {% endfor %}
